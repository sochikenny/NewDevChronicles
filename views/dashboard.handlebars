<h6>Dashboard</h6>
<h3>Welcome {{name}}</h3>
<p>Here are your dev chronicles</p>
{{#if chronicles}}
    <table class="striped">
        <thead>
            <tr>
                <th>Title</th>
                <th>Date</th>
                <th>Status</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            {{#each chronicles}}
                <tr>
                    <td><a href="/stories/{{_id}}"></a>{{title}}</td>
                    <td>{{formatDate createdAt 'MMMM Do YYYY, h:mm:ss a'}}</td>
                    <td><span class="dash-status">{{status}}</span></td>
                    <td></td>
                </tr>
            {{/each}}
        </tbody>

    </table>
{{else}}
    <p>You don't have any chronicles</p>
{{/if}}
