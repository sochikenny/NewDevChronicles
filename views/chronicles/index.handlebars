<h1>Chronicles</h1>
<div class="row">
    {{#each chronicles}}
        <div class="col s12 m4">
            <div class="card">
                <div class="card-image">
                    {{{editIcon user ../user _id}}}
                </div>
                <div class="card-content center-align">
                    <h5>{{title}}</h5>
                    <p>{{stripTags (truncate body 200)}}</p>
                    <br>
                    <div class="chip">
                        <img src="{{user.image}}" alt="">
                        <a href="/chronicles/user/{{user._id}}">{{user.displayName}}</a>
                    </div>
                </div>
                <div class="card-action center-align">
                    <a href="/chronicles/{{_id}}" class="btn grey">Read More</a>
                </div>
            </div>
        </div>
        {{else}}
        <p>No Chronicles to display</p>
        {{/each}}
</div>